@{
    ViewBag.ParentId = @ViewBag.Id + "Parent";
}
<div id="@ViewBag.ParentId" class="form-group row mb-1">
    <label for="@ViewBag.Id" class="col-4 col-form-label">@ViewBag.Label</label>
    <div class="col-8">
        <input id="@ViewBag.Id" class="form-control text-right" type="number" value="0" min="0" onchange="@ViewBag.OnChange">
    </div>
</div>
